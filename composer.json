{
    "name": "syastrebov/circuit-breaker-bundle",
    "description": "Symfony bundle for circuit breaker wrapper.",
    "authors": [
        {
            "name": "syastrebov",
            "email": "serg.yastrebov@gmail.com",
            "homepage": "https://github.com/syastrebov"
        }
    ],
    "license": "MIT",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": "^8.3",
        "syastrebov/circuit-breaker": "^0.0.9",
        "symfony/dependency-injection": "^7.4 || ^8.0",
        "symfony/config": "^7.4 || ^8.0",
        "symfony/http-kernel": "^7.4 || ^8.0"
    },
    "require-dev": {
        "ext-redis": "*",
        "ext-memcached": "*",
        "symfony/test-pack": "^1.2",
        "symfony/phpunit-bridge": "^8.0",
        "symfony/framework-bundle": "^7.4 || ^8.0",
        "nyholm/symfony-bundle-test": "^3.1",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/doctrine-bundle": "^2.18",
        "doctrine/dbal": "^4.4",
        "doctrine/orm": "^3.6",
        "vimeo/psalm": "^6.15",
        "predis/predis": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "CircuitBreakerBundle\\": "src/",
            "Tests\\": "tests/"
        }
    }
}
